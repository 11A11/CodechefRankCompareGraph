monthlist=["JAN","FEB","MAR","APR","MAY","JUN","JUL","AUG","SEP","OCT","NOV","DEC"]
monthdict={'JAN':0,'FEB':1,'MAR':2,'APR':3,'MAY':4,'JUN':5,'JUL':6,'AUG':7,'SEP':8,'OCT':9,'NOV':10,'DEC':11}
# returns a list of months to check rank list in
def get_months(period):
	s_m=monthdict[period[0:3]]
	s_y=period[3:5]
	e_m=period[6:9]
	e_y=period[9:11]
	rank_m_list=[]
	rank_m_list.append(s_m+s_y)
	cur_y=s_y
	cur_m=s_m
	while(cur_m+cur_y!=e_m+e_y):
		if(cur_m=="DEC")
			rank_m_list.append(cur_m+cur_y)
			cur_m=monthlist[ (monthdict[cur_m] + 1)%12]
			cur_y=cur_y+1
	
	

